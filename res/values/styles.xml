<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="translucent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Toast</item>
        <item name="android:windowNoTitle">true</item> 
    </style>

    <style name="seek_bar">
        <item name="android:progressDrawable">@drawable/seekbar_style</item>
        <item name="android:thumb">@drawable/seekbar_thumb</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">10dip</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>
    
    <style name="round_progress_bar"
        xmlns:android_custom="http://schemas.android.com/apk/res/cn.kli.controlpanel">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="roundColor">@color/translucent_background</item>
        <item name="roundProgressColor">@color/translucent_blue</item>
        <item name="textColor">@color/translucent_blue</item>
        <item name="textIsDisplayable">true</item>
        <item name="roundWidth">10dp</item>
        <item name="textSize">18sp</item>
    </style>
</resources>