<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="vertical" >
			<include layout="@layout/window_control_panel_sound"/>
			<View android:layout_height="20dp"
			    android:layout_width="match_parent"/>
			<include layout="@layout/window_control_panel_display"/>
			<View android:layout_height="20dp"
			    android:layout_width="match_parent"/>
			<include layout="@layout/window_control_panel_network"/>
			<View android:layout_height="20dp"
			    android:layout_width="match_parent"/>
			<include layout="@layout/window_control_panel_other"/>
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>