<?xml version="1.0" encoding="utf-8"?>
<cn.kli.controlpanel.module.quickpanel.WindowRootView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp" >

    <LinearLayout
        android:id="@+id/ll_window"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/panel_bkg"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/fl_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#dd000000"
            android:layout_weight="1" >
        </FrameLayout>
    </LinearLayout>

</cn.kli.controlpanel.module.quickpanel.WindowRootView>